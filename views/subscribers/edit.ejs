<div class="courseContainer" >
    <h2 class="formTitle">Edit Subscriber</h2>
    <form class="form" action="<%=`/subscribers/${subscriber._id}/update?_method=PUT`%>" method='POST'>
        <!-- <div class="title">Welcome</div>
        <div class="subtitle">Edit the existing Subscriber</div> -->
        <div class="input-container ic1">
            <input type='text' id='inputName' class="input" name='name' placeholder=' ' value="<%=subscriber.name%>" autofocus>
            <div class="cut"></div>
            <label for="inputName" class="placeholder">Name</label>
        </div>
        <div class="input-container ic2">
            <input class="input" type="text" id="inputEmail" placeholder=" " name='email' value="<%=subscriber.email%>" required>
            <div class="cut cut-short"></div>
            <label for="inputEmail" class="placeholder" >Email</label>
        </div>
        <div class="input-container ic2">
            <input class="input" type="number" id="inputZipCode" placeholder=" " name='zipCode' value="<%=subscriber.zipCode%>" required>
            <div class="cut cut-short"></div>
            <label for="inputXipCode" class="placeholder" >Zip Code</label>
        </div>
        <button type="submit" class="submit">Submit</button>
    </form>
</div>