<div class='data-form' >
    <form action='/courses/create' method='POST' >
        <h2>Create a new Course</h2>
        <label for='inputTitle' >Title</label>
        <input id='inputTitle' name='title' type='text' placeholder='Title' autofocus>
        <label for='inputDescription'>Description</label>
        <input type='text' id='inputDescription' name='description' placeholder='Description' required>
        <label for='inputMaxStudents'>Max Students</label>
        <input type='Number' id='inputMaxStudents' name='maxStudents' placeholder='Max Students' required>
        <label for="inputCost">Cost</label>
        <input type="number" id="inputCost" name="cost" placeholder="Cost" required>
        <button type='submit'>Create</button>
    </form>
</div>