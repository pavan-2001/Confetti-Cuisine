<div>
    <div class="titleButton">
        <h2 class="pageTitle">Course Table</h2>
        <button type="button" onclick="window.location.href = 'http://localhost:3000/courses/new';" class="newButton">Add New Courses</button>
    </div>
    <div class="table-wrapper">
        <table class="fl-table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <% courses.forEach( (course) => { %>
                    <tr>
                        <td>
                            <a href="<%= `/courses/${course._id}`%>"><%= course.title %></a>
                        </td>
                        <td class="description">
                            <%= course.description %>
                        </td>
                        <td>
                            <a href="<%=`/courses/${course._id}/edit`%>">
                                edit
                            </a>
                        </td>
                        <td>
                            <a href="<%=`/courses/${course._id}/delete?_method=DELETE`%>" onclick="return confirm('Are you sure you want to delete this record?')" > 
                                delete
                            </a>
                        </td>
                    </tr>
                <%}) %>
            </tbody>
            </table>
    </div>
</div>