<div class="courseContainer">
    <h2 class="formTitle"> Edit a Course</h2>
    <form class="form" action="<%=`/courses/${course._id}/update?_method=PUT`%>" method="POST">
        <div class="input-container ic1">
            <input type='text' id='inputTitle' class="input" name='title' placeholder=' ' value="<%=course.title%>" autofocus required>
            <div class="cut"></div>
            <label for="inputTitle" class="placeholder">Title</label>
        </div>
        <div class="input-container ic2">
            <input class="input" type="text" id="inputDescription" placeholder=" " name='description' value="<%=course.description%>" required>
            <div class="cut cut-short"></div>
            <label for=" inputDescription" class="placeholder" >Description</label>
        </div>
        <div class="input-container ic2">
            <input class="input" type="text" id="inputMaxStudents" placeholder=" " name='maxStudents' value="<%=course.maxStudents%>" required>
            <div class="cut cut-short"></div>
            <label for="inputMaxStudents" class="placeholder" >Max Students</label>
        </div>
        <div class="input-container ic2">
            <input class="input" type="number" id="inputCost" placeholder=" " name='cost' value="<%=course.cost%>" required>
            <div class="cut cut-short"></div>
            <label for="inputCost" class="placeholder" >Cost</label>
        </div>
        <button type="submit" class="submit">Submit</button>
    </form>
</>