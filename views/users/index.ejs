<div>
    <h2 class='pageTitle' >Users Table</h2>
    <div class="table-wrapper">
        <table class='fl-table' >
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach( (user) => { %>
                    <tr>
                        <td>
                            <a href="<%= `/users/${user._id}`%>"><%= user.fullName %></a>
                        </td>
                        <td class="email">
                            <%= user.email %>
                        </td>
                        <td>
                            <a href="<%=`/users/${user._id}/edit`%>">
                                edit
                            </a>
                        </td>
                        <td>
                            <a href="<%=`/users/${user._id}/delete?_method=DELETE`%>" onclick="return confirm('Are you sure you want to delete this record?')" > 
                                delete
                            </a>
                        </td>
                    </tr>
                <%}) %>
            </tbody>
        </table>
    </div>
</div>